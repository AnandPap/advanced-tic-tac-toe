{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/index.html",
      "use": "@vercel/static",
      "config": {
        "build": {
          "ssr": false,
          "outDir": "client/dist"
        }
      }
    }
  ],
  "routes": [
    { "src": "/server/(.*)", "dest": "server/server.js" },
    { "src": "/(.*)", "dest": "client/dist/index.html" }
  ]
}
